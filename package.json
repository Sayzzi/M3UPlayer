{
  "name": "m3u-player",
  "version": "1.3.2",
  "description": "Electron IPTV M3U Player",
  "main": "main.js",
  "author": "Sayzzi",
  "scripts": {
    "start": "electron .",
    "postinstall": "node -e \"const fs=require('fs');const src='node_modules/hls.js/dist/hls.min.js';const dst='src/renderer/vendor/hls.min.js';if(fs.existsSync(src)){fs.mkdirSync('src/renderer/vendor',{recursive:true});fs.copyFileSync(src,dst);console.log('hls.min.js copied to vendor/');}else{console.warn('hls.js not found in node_modules');}\"",
    "build": "electron-builder --win",
    "build:dir": "electron-builder --win --dir",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "electron-conf": "^1.3.0",
    "hls.js": "^1.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "prettier": "^3.8.1"
  },
  "build": {
    "appId": "com.sayzzi.m3u-player",
    "productName": "M3U Player",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "!node_modules/electron/**",
      "!node_modules/electron-builder/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "M3U Player"
    }
  }
}
